<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/newestoffers_layout"
  android:background="@drawable/bgpattern">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1">
        <ListView android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@android:id/list">
        </ListView>
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@android:id/empty"
            android:text="@string/no_offers">
        </TextView>
    </LinearLayout>
</LinearLayout>
